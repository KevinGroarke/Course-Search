@import 'jeet'

a, a:focus, a:hover
  color: font_color

html, body
  height: 100%
  background-color: background_color
  background-image: url('../images/blue-grey-pentagonal-background.png')
  color: font_color

.site-wrapper
  display: table
  width: 100%
  height: 100%
  min-height: 100%
  box-shadow: inset 0 0 100px rgba(0,0,0,.5)

.center-element
  align(both)

.center-horizontal
  align(horizontal)

.search-wrapper
  width: 500px
  padding: 50px 20px

.label-size
  span(1/3)
  padding-top: 10px

.input-size
  span(2/3)

// Gets rid of increment dots on slider
.md-track-ticks
  display: none

.all-columns
  span(1)

// Both of these are needed so that the autocomplete box is wide enough
.auto-complete-width
  width: 500px !important
  max-width: 5000px !important;

.md-virtual-repeat-container.md-autocomplete-suggestions-container
  width: 250px !important

.white-color *
    color: white !important
    text-decoration-color: white !important


